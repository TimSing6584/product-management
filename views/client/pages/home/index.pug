extends ../../layouts/default.pug
block style
    link(href="/client/css/home_page.css" rel="stylesheet")
block main
    //- HERO / INTRO
    section.hero
        img.hero-bg(src="/client/images/background.webp" alt="Books background")
        .hero-overlay
        .hero-content
            h1 Discover Your Next Favorite Book
            p Thoughtfully curated books for curious minds.
            a.btn-primary(href="/product") Explore More Books

    //- NEWEST BOOKS
    section.section
        .container
            h2.section-title New Arrivals
            .book-slider
                .book-track
                    - for (let i = 0; i < 2; i++)
                        each product in newest_products
                            .book-card
                                img(src=product.images alt=product.title)
                                .book-info
                                    a(href=`product/detail/${product.slug}`)
                                        h3= product.title
                                    if product.discountPercentage != 0
                                        .price #{(((100 - product.discountPercentage) * product.price) / 100).toFixed(0)}$
                                        .price-details
                                            span.old-price #{product.price}$
                                            span.discount -#{product.discountPercentage}%
                                    else
                                        .price #{product.price}$

    //- WHY US
    section.section.soft-bg
        .container
            h2.section-title Why Readify?
            .why-grid
                .why-card
                    .icon-circle
                        span.icon
                            img(src="client/images/icon-truck.png")
                    h3 Free Shipping
                    p Fast delivery straight to your door, always free.
                .why-card
                    .icon-circle
                        span.icon
                            img(src="client/images/icon-purchase.png")
                    h3 Easy Returns
                    p Free 30-day return policy.
                .why-card
                    .icon-circle
                        span.icon
                            img(src="client/images/icon-operator.png")
                    h3 24/7 Support
                    p Our team is here to help anytime, day or night.

    //- SUPPORT
    section.section.support-section
        .container
            h2.section-title We're Here to Help
            .support-grid
                .support-card
                    .support-header
                        h3 How Buying Works
                    p Watch a quick guide on how to purchase books.
