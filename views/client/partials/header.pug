include ../../utils/search.pug
header.header
    .container
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/client/images/readify.svg" alt="Logo")
            .col-9
                .inner-menu
                    ul
                        if show_search
                            li
                                +search(last_search_word)
                        li.home-page
                            a(href="/") Home Page
                        li
                            a(href="/product") Products
                        li
                            a(href="/cart")
                                i.fa-solid.fa-basket-shopping.fa-lg
                                span (#{cart ? cart.totalQuantity : 0})
                        li
                            if user != null
                                a(href="/my_account")
                                    if user.avatar
                                        i
                                            img(src=account.avatar account-avatar)
                                    else
                                        i(class="fa-solid fa-circle-user fa-xl")
                                a(
                                    href="/auth/logout"
                                    class="btn btn-danger btn-sm header-logout"
                                ) Log Out
                            else
                                a(
                                    href="/auth/preview"
                                    class="btn btn-primary btn-sm header-login"
                                ) Log In