mixin pagination(pagination)
    nav
        ul(class="pagination")
            if pagination.currentPage > 1
                li(class="page-item")
                    button(class="page-link" pageNumber=pagination.currentPage - 1) Previous
            - for(let i = 0; i < pagination.total_pages; i ++){
                li(class="page-item")
                    button(class=`page-link ${i + 1 == pagination.currentPage ? "active" : ""}` pageNumber=i + 1) #{i + 1}
            - }
            if pagination.currentPage < pagination.total_pages
                li(class="page-item")
                    button(class="page-link" pageNumber=pagination.currentPage + 1) Next
