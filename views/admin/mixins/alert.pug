mixin alert-success(time)
    - if (messages.success)
        .message.info
            div(
                class="alert alert-success"
                show-alert
                data-time=time
            ) #{messages.success} <button close-alert type="button" class="btn btn-outline-danger">X</button>
mixin alert-error(time)
    - if (messages.error)
        .message.info
            div(
                class="alert alert-danger"
                show-alert
                data-time=time
            ) #{messages.error} <button close-alert type="button" class="btn btn-outline-secondary">X</button>
