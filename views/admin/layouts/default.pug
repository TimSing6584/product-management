doctype html
html(lang="en")
    head
        title #{titlePage}
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous")
        link(href="/admin/css/default.css" rel="stylesheet")
        block style
    body
        if role.permissions.length > 0
            include ../partials/header.pug
            .body
                include ../partials/slider.pug
                .main
                    block main

            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous")
            //- Embed helpers JS script (that can be used for multiple pages)
            script(src="/utils/alert.js")
            script(src="/utils/sorting.js")
            script(src="/utils/pagination.js")
            script(src="/utils/search_form.js")
            script(src="/admin/js/helpers/delete_item.js")
            script(src="/admin/js/helpers/preview_image.js")
            block script
        else
            h1 Oops !!! You need authorization to access