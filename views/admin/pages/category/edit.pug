extends ../../layouts/default.pug
include ../../../utils/alert.pug
block style
    link(href="/admin/css/category.css" rel="stylesheet")
block main
    .category-edit
        h2 Edit Category
        +alert-error("5000")
        form(
            action=`/admin/category/edit/${category._id}?_method=PATCH`
            method="POST"
        )
            .form-group
                label(for="name") Category Name
                input(
                    type="text"
                    id="name"
                    name="name"
                    value=category.name
                    required
                )

            button.btn-submit(type="submit") Save Changes
            a.btn-cancel(href="/admin/category") Cancel

        if other_categories.length
            hr
            h4 Existing Categories
            ul.category-hint
                each c in other_categories
                    li= c.name
block script
    script(src="/admin/js/category.js")