extends ../../layouts/default.pug
include ../../mixins/filter-stock.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
block main
    h1 Product Lists

    .card.mb-3
        .card-header Search and Filter
        .card-body
            .row
                .col-6
                    +filter-buttons(filterButtons)
                .col-6
                    +search(last_search_word)
    form(action="/admin/product/change-multi?_method=PATCH" method="POST" form-change-multi)
        //- data submitted to back end will be in the form {type: "delete" || "change-position" , ids: "...."}
        .d-flex.align-items-start.justify-content-start
            .form-group
                select(name="type" class="form-control")
                    option(value="" disabled selected) --Choose your action--
                    option(value="delete") Delete
                    option(value="change-position") Change Position
            //- imaginary form (just to send data to back end)
            .form-.d-none
                input(name="ids" value="" type="text" class="form-control")
            button(type="submit" class="btn btn-primary") Apply
    table.table.table-hover.table-sm
        thead
            tr
                th
                    input(type="checkbox" name="check-all")
                th N.o
                th Image
                th Title
                th Category
                th Price
                th Discount
                th Stock
                th Action
        tbody
            each item, index in products
                tr
                    td
                        input(type="checkbox" name="id" value=item.id)
                    td #{index + 1 + (pagination.currentPage - 1) * pagination.limitItems}
                    //- calculate accurate index at each page
                    td
                        img(
                            src=item.images
                            alt="Product 1"
                            width="100px"
                            height="auto"
                        )
                    td #{item.title}
                    td #{item.category}
                    td #{item.price.toFixed(0)}$
                    td #{item.discountPercentage.toFixed(0)}%
                    td
                        button(class="btn bg-transparent stock-counter" counter_value="decrement" data-id=item.id) -
                        div(class=` ${item.stock > 0 ? "badge bg-success" : "badge bg-danger"}`) #{item.stock}
                        button(class="btn bg-transparent stock-counter" counter_value="increment" data-id=item.id) +
                    td
                        button(class="btn btn-warning btn-sm modify-delete") Modify
                        button(class="btn btn-danger btn-sm ml-1 modify-delete") Delete
    +pagination(pagination)

    //- script.js is used to handle general interaction (pagination, searching,...), product.js is used to process specific details about products (edit, delete)
    form(id="change-stock" action="" method="POST" path="/admin/product/change-stock")
